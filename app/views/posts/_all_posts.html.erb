<ul class="posts">
  <% @posts.each do |post| %>    
    <li>
        <div id="<%= "#{post.class}#{post.id}" %>">
          <span class="author">
            <%= post.user.name %>:        
          </span>
          <span class="content">
            <%= post.content %>
          </span>
          <span class="timestamp">
            Posted <%= time_ago_in_words(post.created_at) %> ago.
          </span>          
          <span class="buttons"> 
            <% if current_user == post.user %>
              < <%= link_to "edit", edit_post_path(post), remote: true%> >
            <% end %>       
            <%= render 'comments/new_button', object: post %>
          </span>
        </div>
        <div class="span8" id="<%= "#{post.class}#{post.id}" %>com">
          <%= render 'comments/comments', post: post %>
        </div>
    </li>    
  <% end %>
</ul>