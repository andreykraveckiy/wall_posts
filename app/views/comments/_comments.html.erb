<% if post.comments.any? %>
	<p>Comments (<%= post.comments.count %>)</p>
	<ul class="comments">
		<% post.comments.each do |comment| %>
			<li>
				<span class="author">
					<%= comment.user.name %>:			
				</span>
			  <span class="content">
			  	<%= comment.content %>
			  </span>
			  <% if user_signed_in? %>
				  <span>			  	
					<%= form_tag(comments_path, method: :post) do %>
						<%= text_area_tag :content %> <br>
						<%= hidden_field_tag :commentable, :comment %>
						<%= submit_tag "Submit", class: "btn btn-large btn-primary" %>
					<% end %>
				  </span>
				<% end %>
			  <span class="timestamp">
			    Posted <%= time_ago_in_words(comment.created_at) %> ago.
			  </span>
			  <span class="timestamp">
			    <%= render 'comments/comments', post: comment %>
			  </span>
			</li>
		<% end %>
	</ul>
<% end %>
	