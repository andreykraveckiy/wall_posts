<div id="<%= "#{object.class}#{object.id}" %>new_form">
  <% if user_signed_in? %>
    <%= form_tag(new_comment_path, method: :get, remote: true) do %>
      <%= hidden_field_tag :commentable_type, object.class %>
      <%= hidden_field_tag :commentable_id, object.id %>
      <%= submit_tag "Comment", class: "btn btn-sm btn-primary" %>
    <% end %>
  <% end %>
</div>