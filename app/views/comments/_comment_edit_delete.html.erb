<div id="<%= "#{comment.class}#{comment.id}" %>new_form">
  <% if user_signed_in? %>
    <%= link_to "<comment>", new_comment_path(commentable_type: comment.class, commentable_id: comment.id), remote: true %>
  <% end %>
  <% if current_user == comment.user %>
    | <%= link_to "<edit>", edit_comment_path(comment), remote: true%> |  
    <%= link_to "<delete>", comment, method: :delete, data: { confirm: "You sure?" }, title: comment.content, remote: true %>
  <% end %>
</div>